<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "author", "Author Name" %>
    <%= form.text_field "author" %>
  </p>
  <p>
    <%= form.label "body", "Post Text" %>
    <%= form.text_field "body" %>
  </p>
  <p>
    <%= form.label "image", "Image"%>
    <%= form.text_field "image"%>
  </p>
  <%= form.submit %>
<% end %>

